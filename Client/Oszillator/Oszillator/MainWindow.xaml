<Window
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:Gui="clr-namespace:Oszillator.Gui" x:Class="Oszillator.MainWindow"
        Title="MainWindow" Height="350" Width="525"
        Initialized="Window_Initialized" Closing="Window_Closing">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition />
            <ColumnDefinition />
            <ColumnDefinition />
        </Grid.ColumnDefinitions>
        <Button Content="Start" HorizontalAlignment="Left" VerticalAlignment="Top" Width="75" Click="Start_Click" Grid.Column="0"/>
        <Button Content="Stop" HorizontalAlignment="Left" VerticalAlignment="Top" Width="75" Click="Stop_Click" Grid.Column="1"/>
        <Button Content="Dummy-Start" HorizontalAlignment="Left" VerticalAlignment="Top" Width="75" Click="Dummy_Click" Grid.Column="2"/>

        <Gui:OsziLines BorderBrush="Blue" BorderThickness="1" 
                       x:Name="Oszilloskop" Grid.Column="0" Grid.Row="1" Grid.ColumnSpan="3"/>
        <TextBox x:Name="Voltage" TextWrapping="Wrap" Text="TextBox" Grid.ColumnSpan="3" Grid.Column="0" Grid.Row="2"/>
        


    </Grid>
</Window>
